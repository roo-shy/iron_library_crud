<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Book List</title>
  </head>
  <body>
      <div class="row">
        <% @books.each do |book| %>
        <div class="col s12 m6 l4">
          <div class="demo-card-square mdl-card mdl-shadow--2dp" style="max-width: 100%;">
            <%= image_tag attachment_url(book, :book_image, :fill, 300, 400, format: "jpg") %>
          <ul>
            <li><%= link_to book.title, book_path(id: book.id) %><li>
              <li><%= book.author.full_name%><li>
              <li><%= number_to_currency(book.price) %><li>
              </ul>
              <%= link_to 'Edit', edit_book_path(id: book.id), class: "waves-effect waves-light btn" %>
          </div>
        </div>
          <% end %>

      </div>



  </body>
</html>
