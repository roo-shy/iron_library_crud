<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Book List</title>
  </head>
  <body>
<div class="column">
      <div class="row">
        <div class="col s12 m5">

            <div class="demo-card-square mdl-card mdl-shadow--2dp" style: "width: 500px;">
              <%= image_tag attachment_url(@book, :book_image, :fill, 300, 400, format: "jpg") %>
              <h5><span class="card-title"><%= @book.title %></h5>
                <h6><%= @book.author.full_name%></span></h6>
              <%= link_to 'Edit', edit_book_path, class: "waves-effect waves-light btn"  %>
              <%= link_to 'Add to Cart', add_to_cart_path(book_id: @book.id), class: 'btn', method: :post %>
            </div>

          </div>
        </div>
      </div>
