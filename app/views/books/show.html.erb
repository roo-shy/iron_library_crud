<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Book List</title>
  </head>
  <body>
    <nav>
<div class="nav-wrapper">
      <a href="http://localhost:3000/#" class="brand-logo">Iron Library</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to 'Book List', books_path %></li>
        <li><%= link_to 'New Book', new_book_path %></li>
        <li><%= link_to 'Author List', authors_path %></li>
        <li><%= link_to 'New Author', new_author_path %></li>
      </ul>
    </div>
      </nav>
<div class="column">
      <div class="row">
        <div class="col s12 m5">
          <div class="card">
            <div class="demo-card-square mdl-card mdl-shadow--2dp" style: "width: 500px;">
              <div class="mdl-card__title mdl-card--expand" style="background: url(<%= @book.photo_url %>); background-repeat: no-repeat;">
       </div>
            <span class="card-title"><%= @book.title %></span>
            </div>
            <div class="card-content">
                 <h2><%= link_to @book.author.full_name, author_path(id: @book.author_id) %></h2>
                  <p><%= @book.author.bio %></p>
            </div>
            <div class="card-action">
              <%= link_to 'Edit', edit_book_path %>
            </div>
          </div>
        </div>
      </div>
</div>
