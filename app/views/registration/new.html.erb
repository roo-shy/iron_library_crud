<div class="row">
  <div class="col s12 m5">

  <div class="demo-content mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
    <h1>New User Registration</h1>

    <% if @user.errors.any? %>
      <%= pluralize(@user.errors.count, 'error') %> prevented your form from success.
      <ul class="mdl-list">
        <% @user.errors.full_messages.each do |msg| %>
          <li class="mdl-list__item"><%= msg %></li>
        <% end %>
      </ul>
    <% end %>


    <%= form_for @user do |f| %>
      <div class="">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="">
        <%= f.submit class: "waves-effect waves-light btn" %>

      </div>
    <% end %>
  </div>
</div>
</div>
